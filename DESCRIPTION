Package: abmR
Type: Package
Title: Agent-Based Models in R
Version: 1.0.9
Authors@R: c(
 person("Benjamin", "Gochanour",
 email = "ben.gochanour@gmail.com",
 role = c("aut","cre")),
 person("Javier", "Fernandez-Lopez",
